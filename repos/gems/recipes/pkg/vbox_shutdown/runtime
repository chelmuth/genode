<runtime ram="32M" caps="1000" binary="init">

	<requires>
		<file_system label="system reports" writeable="no"/>
		<file_system label="system config" writeable="yes"/>
		<nitpicker/>
		<timer/>
	</requires>

	<content>
		<rom label="backdrop"/>
		<rom label="fs_report"/>
		<rom label="fs_rom"/>
		<rom label="init"/>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="libpng.lib.so"/>
		<rom label="report_rom"/>
		<rom label="shutdown.png"/>
		<rom label="vbox_shutdown"/>
		<rom label="vfs.lib.so"/>
		<rom label="zlib.lib.so"/>
	</content>

	<config>

		<parent-provides>
			<service name="ROM"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="File_system"/>
			<service name="Nitpicker"/>
			<service name="Timer"/>
		</parent-provides>

		<default-route> <any-service> <parent/> <any-child/> </any-service> </default-route>

		<default caps="100"/>

		<start name="report_rom">
			<resource name="RAM" quantum="2M"/>
			<provides> <service name="Report"/> <service name="ROM"/> </provides>
			<config verbose="yes">
				<policy label="backdrop -> config" report="vbox_shutdown -> backdrop_init_config"/>
			</config>
		</start>

		<start name="backdrop" caps="200">
			<binary name="init"/>
			<resource name="RAM" quantum="16M"/>
			<route>
				<service name="ROM" label="config"> <child name="report_rom"/> </service>
				<any-service> <parent/> </any-service>
			</route>

		</start>

		<start name="fs_rom">
			<resource name="RAM" quantum="3M"/>
			<provides> <service name="ROM"/> </provides>
			<route>
				<service name="File_system"> <parent label="system reports"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>

		<start name="fs_report">
			<resource name="RAM" quantum="1M"/>
			<provides> <service name="Report"/> </provides>
			<config> <vfs> <fs/> </vfs> </config>
			<route>
				<service name="File_system"> <parent label="system config"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>

		<start name="vbox_shutdown">
			<resource name="RAM" quantum="2M"/>
			<route>
				<service name="Report" label="system"> <child name="fs_report" label="system"/> </service>
				<service name="Report" label="backdrop_init_config"> <child name="report_rom"/> </service>
				<service name="ROM" label="runtime/state"> <child name="fs_rom"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>

	</config>

</runtime>
